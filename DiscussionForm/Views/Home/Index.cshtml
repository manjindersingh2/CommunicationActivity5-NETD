@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager;

<div class="text-center">
    <h1 class="display-4">Welcome to Discussion Forms, a place to raise your voice</h1>
    @if (signInManager.IsSignedIn(User))
    {
        <a asp-action="AddTopic" class="btn-success">Start New Topic</a>
        <a asp-action="TopicList" class="btn-danger">Check current Topics</a>
    }
    else
    {


    }
</div>
